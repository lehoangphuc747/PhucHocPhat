{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "module": "ESNext",
    "target": "ES2020",
    "baseUrl": ".", // Đảm bảo baseUrl được đặt
    "paths": { // Đảm bảo paths được đặt
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}